@page "/login"
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@section Head {
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
  <link rel="stylesheet" href="~/css/style.css" />
  <link rel="stylesheet" href="~/css/login.css" />
}

<main>
  <div class="auth-wrapper">
    <div class="container py-5">
      <div class="auth-card">
      <div class="auth-left">
        <div class="form-content">
          <div class="login-form">
            <div class="title" id="board-title">Login</div>

            <div class="alert-box">
              <div class="alert alert-danger text-center mt-3" role="alert" id="error-msg" style="display:none;"></div>
            </div>

            <form id="login-form" method="post">
              <div class="input-boxes">
                <div class="input-box">
                  <i class="fas fa-envelope"></i>
                  <input type="email" name="email" placeholder="Enter your email" id="loginEmail" required />
                </div>
                <div class="input-box">
                  <i class="fas fa-lock"></i>
                  <input type="password" name="password" placeholder="Enter your password" id="password" required />
                  <i class="bi bi-eye-fill" style="margin-left:auto;margin-right: 6px;" id="togglePassword"></i>
                </div>
                <div class="text"><a id="forgotpassword" href="/forgot-password">Forgot password?</a></div>
                <div class="button input-box">
                  <button type="submit" class="btn">Submit</button>
                </div>
              </div>
            </form>

          </div>
        </div>
      </div>
      <div class="auth-right">
        <div class="hero">
          <img src="~/images/login-hero.jpg" alt="Login Hero" class="hero-img" />
          <div class="hero-text">
            <h2>SCHOOL MANAGEMENT SYSTEM</h2>
            <p>Plan serve program</p>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</main>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script>
        // Minimal JS to toggle password visibility used by the original login UI
        (function(){
            const toggle = document.getElementById('togglePassword');
            const pwd = document.getElementById('password');
            if(toggle && pwd){
                toggle.style.cursor = 'pointer';
                toggle.addEventListener('click', ()=>{
                    const type = pwd.getAttribute('type') === 'password' ? 'text' : 'password';
                    pwd.setAttribute('type', type);
                });
            }
        })();
    </script>
}
